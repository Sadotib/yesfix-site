package components

templ Navbar() {
<nav class="sticky top-0 w-full bg-base-100 bg-white shadow-sm shadow-base-300/20 py-3 z-50">
    <div class="container mx-auto flex flex-wrap items-center justify-between gap-4 px-4">
        <!-- Logo -->
        <div class="flex items-center gap-2">
            <a class="text-xl font-bold text-base-content no-underline" href="/">
                <img src="public/logo.png" alt="Yesfix" class="w-32 h-16 object-contain rounded" />
            </a>
        </div>

        <!-- Desktop Buttons -->

        {children...}


        <!-- Mobile Menu Button -->
        <div class="md:hidden ">
            <button id="menu-toggle" class="text-xl focus:outline-none" onclick="toggleMobileMenu()">
                ☰
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu"
        class="md-hidden transition-all duration-300 ease-in-out md:hidden px-4 pt-6 pb-4 space-y-4 bg-white border-t-2 border-black">
        <a href="#prebook"
            class="scroll-prebook mobile-link w-full px-4 py-2 border-2 border-brutalist-yellow bg-brutalist-yellow text-brutalist-black font-black uppercase tracking-wider shadow-brutalist-shadow">
            🗓️ Pre-Book Now
        </a>
        <a href="#contact"
            class="scroll-contact mobile-link w-full px-4 py-2 text-brutalist-black font-black uppercase tracking-wider border-2 border-black hover:bg-brutalist-black hover:text-white">
            Contact Us
        </a>
    </div>
</nav>

<!-- External Script -->
<script>
    function scrollWithOffset(id, offset = 80) {
        const target = document.getElementById(id);
        if (!target) return;

        const y = target.getBoundingClientRect().top + window.pageYOffset - offset;
        window.scrollTo({ top: y, behavior: "smooth" });
    }

    // Toggle mobile menu
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileMenu) {
            mobileMenu.classList.toggle("hidden");
        }
    }

    // Hide mobile menu (after clicking a link)
    function hideMobileMenu() {
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileMenu && !mobileMenu.classList.contains("hidden")) {
            mobileMenu.classList.add("hidden");
        }
    }

    // Wait for DOM to be fully loaded
    document.addEventListener("DOMContentLoaded", () => {
        // Attach click handlers for scroll buttons
        document.querySelectorAll(".scroll-prebook").forEach(btn => {
            btn.addEventListener("click", (e) => {
                e.preventDefault();
                scrollWithOffset("prebook", 100);
                hideMobileMenu();
            });
        });

        document.querySelectorAll(".scroll-contact").forEach(btn => {
            btn.addEventListener("click", (e) => {
                e.preventDefault();
                scrollWithOffset("contact", 100);
                hideMobileMenu();
            });
        });

        // Toggle menu on hamburger icon click
        const menuToggle = document.getElementById("menu-toggle");
        if (menuToggle) {
            menuToggle.addEventListener("click", toggleMobileMenu);
        }

        // Hide menu when clicking any mobile nav link
        document.querySelectorAll(".mobile-link").forEach(link => {
            link.addEventListener("click", hideMobileMenu);
        });
    });
</script>


}

